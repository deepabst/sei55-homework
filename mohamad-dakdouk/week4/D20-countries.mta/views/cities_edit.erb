<h3>Editing <%= @cities.name %> </h3>


<form action="/cities/<%= @cities.id %>" method="post">

<label>
    name:
    <input type="text" name="name" value="<%= @cities.name %>">
</label>
<br>

<label>
    Location:
    <input type="text" name="location" value="<%= @cities.location %>">
</label>
<br>
<label>
    Population:
    <input type="text" name="population" value="<%= @cities.population %>">
</label>
<br>
<label>
    Attractions:
    <input type="text" name="attractions" value="<%= @cities.attractions %>">
</label>
<br>
<label>
    Image:
    <input type="text" name="image_url" value="<%= @cities.image_url %>">
</label>
<br>
<label>
    Country:
   <select name="country_id">
   <option value="" selected disabled>Please Select</option>
   <% Country.all.each do |country|%>
    <option value="<%= country.id %>"><%= country.name %>
    </option>
   <%end%>
   
   <%# <option value="1"> Luke </option>
   <option value="2">Kris</option> %>
   </select>
</label>
<br>

<button>Update City</button>

</form>