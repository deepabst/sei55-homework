<h3>Add New Planet</h3>

<%= form_with model:@planet, local: true do |f| %>

<%= f.label :name %>
<%=  f.text_field :name %>
<br>
<%= f.label :orbit %>
<%= f.text_field :orbit %>
<br>
<%= f.label :mass %>
<%= f.text_field :mass%>

<br>
<%= f.label :moon %>
<%= f.text_field :moon %>
<br>
<%= f.label :image_url %>
<%= f.text_field :image_url %>
<br>

<%= f.submit %>
<% end %>




