<%= form_with model: @city, local: true do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :capital %>
  <br>
  <%= f.text_field :capital %>
  <br><br>
  <%= f.label :population %>
  <br>
  <%= f.text_field :population %>
  <br><br>
  
  <%= f.label :attarctions %>
  <br>
  <%= f.text_field :attractions %>
  <br><br>

  <%= f.label :image, 'Image URL' %>
  <br>
  <%= f.text_field :image %>
  <br><br>

  <%= f.label :country_id, 'Country' %>
  <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: true  %>

  <!-- 
  <option value="5">Lee Kranser</option>
  -->

  <br><br>

  <%= f.submit %>
<% end %>