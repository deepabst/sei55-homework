
<%= form_with model: @animal, local: true do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :species %>
    <%= f.text_field :species %>
    <br>
    
    <%= f.label :region %>
    <%= f.text_field :region %>
    <br>

    <%= f.label :life_span  %>
    <%= f.text_field :life_span %>
    <br>

    <%= f.label :image_url, 'Image URL' %>
    <%= f.text_field :image_url %>
    <br>

    <%= f.label :zoo_id, 'Zoo' %>
    <%= f.collection_select :zoo_id, Zoo.all, :id, :name, include_blank: true %>

    <%= f.submit %>

<% end %>