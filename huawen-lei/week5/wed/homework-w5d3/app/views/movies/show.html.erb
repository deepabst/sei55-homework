
<h2><%= @movie.name %></h2>

<h3>
    by
    <%= link_to @movie.director.name, director_path(@movie.director_id) %>
</h3>

<%= link_to 'Edit', edit_movie_path(@movie.id) %>
|
<%= link_to 'Delete', movie_path(@movie.id), method: 'delete' %>

<p>
    <strong>Release Year: </strong>
    <%= @movie.release_year %>
</p>


<p>
    <strong>Starring: </strong>
    <%= @movie.starring %>
</p>


<p>
    <strong>Running Time: </strong>
    <%= @movie.running_time %> mins
</p>

<%= image_tag @movie.image_url, alt: @movie.name %>

