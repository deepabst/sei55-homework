<h3>Add new movie</h3>

<form action="/movie" method="post">

    <label>
        Name:
        <input type="text" name="name">
    </label>
    <br>

    <label>
        Release Year:
        <input type="text" name="release_year">
    </label>
    <br>

    <label>
        Director:
        <input type="text" name="director">
    </label>
    <br>

    <label>
        Starring:
        <input type="text" name="starring">
    </label>
    <br>

    <label>
        Country:
        <input type="text" name="country">
    </label>
    <br>

    <label>
        Running time:
        <input type="text" name="running_time">
    </label>
    <br>

    <label>
        Watch or not (1 for yes, 0 for no):
        <input type="text" name="watch_or_not">
    </label>
    <br>

    <label>
        Image URL:
        <input type="text" name="image_url">
    </label>
    <br>

    <label>
        Genre:

        <select name="genre_id">
            <% Genre.all.each do |item| %>
                <option value="<%= item.id %>">
                <%= item.name %>
                </option>
            <% end %>
        
        </select>
    
    </label>
    <br>






    <button>Click me to add</button>


</form>





