<%= form_with model: @buyer, local: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :image, 'Image URL '%>
    <%= f.text_field :image %>
    <br>

    <%= f.label :email, 'Email' %>
    <%= f.text_field :email  %>
    <br>

    <br>

    <%= f.submit %>

<% end %>
